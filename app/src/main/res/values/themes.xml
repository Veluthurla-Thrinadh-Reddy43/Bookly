<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.Bookly" parent="android:Theme.Material.Light.NoActionBar" />

    <!-- The theme for the system splash screen -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background to a solid color. This should match your composable's background. -->
        <item name="windowSplashScreenBackground">#FFFFFF</item>
        <!-- Set the icon to our new transparent drawable -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/transparent</item>
        <!-- Set the theme to be used after the splash screen is dismissed -->
        <item name="postSplashScreenTheme">@style/Theme.Bookly</item>
    </style>
</resources>
